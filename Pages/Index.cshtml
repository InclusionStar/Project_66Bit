@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
    Layout = "_Home";
}
<link href="~/css/style.css" rel="stylesheet" />
<link href="~/css/colors/blue.css" id="theme" rel="stylesheet" />
<link href="~/css/index.css" rel="stylesheet" />
<link href="~/css/Module.css" rel="stylesheet" />
<div class="text-center">
    <div class="hoverup">
        <ul class="main-menu">
            <li>
                <a href="#services" class="dop btn btn-info btn-rounded waves-effect waves-light m-b-40">SW</a>
                <ul class="sub-menu">
                    <li><a href="Index">Список проектов</a></li>
                    <li><a href="Index2">Справочник по модулям</a></li>
                </ul>
            </li>
        </ul>
        <h3 class="display-4">Список проектов</h3>
        <div>
            <a href="prifle" class="profile"></a>
        </div>
    </div>
    <div class="cardFix">
        @{
            for (int i = 0; i < 4; i++)
            {
                <div class="card1 card">
                    <div class="nameProject"><a href="mod" class="size">Название проекта</a></div>
                    <div class="type"><p>Тип : Мобильное приложение</p></div>
                    <div class="type"><p>Заказчик : OПГ Газпром</p></div>
                    <div class="type"><p>Стоимость часа : 1800Р</p></div>
                    <div class="type"><p>28.01.2020 - 15.10.2021</p></div>
                    <div class="type2"><p>Статус : в разработке</p></div>
                    <div class="form btn btn-info btn-rounded waves-effect waves-light m-b-40"><a href="">Сформировать проект на базе текущего</a></div>
                    <div class="line"></div>
                </div>
            }
        }
    </div>
    <div class="did">
        <form>
            <input type="text" placeholder="Искать здесь...">
            <button type="submit"></button>
        </form>
    </div>
    <div class="AddProject fix">
        <div class="add">
            <button class="form12 btn btn-info btn-rounded waves-effect waves-light m-b-40" id="myBtn">+ Добавить проект</button>
        </div>
        <div id="myModal" class="batton card">
            <button class="close btn waves-effect waves-light m-b-40"></button>
            <div class="baton"><input type="text" class="login " placeholder="Название проекта" required /></div>
            <div class="baton"><input type="text" class="login" placeholder="Тип проекта" required /></div>
            <div class="baton">
                <p class="status">Выберите статус проекта :</p>
                <select name="theme">
                    <option value="Планирование">Планирование</option>
                    <option value="Пред.Разработка">Пред.Разработка</option>
                    <option value="В разработке">В разработке</option>
                    <option value="Завершен">Завершен</option>
                </select>
            </div>
            <p class="status">Выберите дату проекта :</p>
            <div class="baton date"><input type="date" name="calendar1"> - <input type="date" name="calendar2"></div>
            <div class="Customer"><p class="pos">Заказчик</p></div>
            <div class=" CustomerCard">
                <div class="baton"><input type="text" class="login" placeholder="ИФО" required /></div>
                <div class="baton"><input type="text" class="login" placeholder="email" required /></div>
                <div class="baton"><input type="text" class="login" placeholder="Телефон" required /></div>
            </div>
            <button class="form22 btn btn-info btn-rounded waves-effect waves-light m-b-40">Создать проект</button>
        </div>
    </div>
    <div class="fixModule">
        @{
            for (int i = 0; i < 7; i++)
            {
                <div class="card card1 cardModule" id="card-@i">
                    <div class="nameModule"><p class="size">Название модуля(Название проекта)</p></div>
                    <div class="timeModule"><p>Количество часов : 18</p></div>
                    <div class="line lineModule" id="line-@i"></div>
                    <button class="tel-@i module formMOdule btn btn-info btn-rounded waves-effect waves-light m-b-40">Проекты по схожему модулю</button>
                    <div class="card-@i contentMOdule" id="tel-@i">
                        @for (int j = 0; j < 7; j++)
                        {
                            <div class="card insidecard">
                                <div class="nameModule"><p class="">Название модуля(Название проекта)</p></div>
                            </div>
                        }
                    </div>
                </div>
            }
        }
    </div>
</div>
<script src="~/js/index.js"></script>
<script src="~/js/Module.js"></script>
<style>
    .fixed {
        position: fixed;
    }

    .form22 {
        color: white;
    }

    .cardFix {
        position: relative;
        left: -150px;
    }
</style>
